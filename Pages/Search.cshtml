@page
@model ProjectApp.Pages.SearchModel
@{
    ViewData["Title"] = "Search Projects";
}

<div class="row">
    <div class="col-md-12">
        <h1>Search Projects</h1>
        <p>Search for projects by name, description, status, or project manager.</p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <form method="get" class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="SearchString" class="form-label"></label>
                            <input asp-for="SearchString" class="form-control" placeholder="Enter search term..." />
                            <span asp-validation-for="SearchString" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="SearchField" class="form-label">Search In</label>
                            <select asp-for="SearchField" class="form-select">
                                @foreach (var option in Model.SearchFieldOptions)
                                {
                                    <option value="@option.Value" selected="@(option.Value == Model.SearchField)">@option.Text</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Status" class="form-label">Status Filter</label>
                            <select asp-for="Status" class="form-select">
                                @foreach (var status in Model.StatusOptions)
                                {
                                    <option value="@status" selected="@(status == Model.Status)">@status</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="form-label">&nbsp;</label>
                            <div>
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-search"></i> Search
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                @if (!string.IsNullOrWhiteSpace(Model.SearchString) || (!string.IsNullOrWhiteSpace(Model.Status) && Model.Status != "All"))
                {
                    <div class="row mt-2">
                        <div class="col-md-12">
                            <a asp-page="/Search" class="btn btn-outline-secondary btn-sm">Clear Search</a>
                        </div>
                    </div>
                }
            </div>
        </form>
    </div>
</div>

@if (Model.TotalCount > 0)
{
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <p class="mb-0">
                    <strong>@Model.TotalCount</strong> project(s) found
                    @if (!string.IsNullOrWhiteSpace(Model.SearchString))
                    {
                        <span>for "<strong>@Model.SearchString</strong>"</span>
                    }
                </p>
                
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Search results pagination">
                        <ul class="pagination pagination-sm mb-0">
                            @if (Model.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Model.GetPageUrl(Model.PageNumber - 1)">Previous</a>
                                </li>
                            }
                            
                            @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" href="@Model.GetPageUrl(i)">@i</a>
                                </li>
                            }
                            
                            @if (Model.HasNextPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Model.GetPageUrl(Model.PageNumber + 1)">Next</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Project Name</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Project Manager</th>
                            <th>Team Members</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var project in Model.Projects)
                        {
                            <tr>
                                <td>
                                    <strong>@project.Name</strong>
                                </td>
                                <td>
                                    @if (project.Description.Length > 100)
                                    {
                                        <span>@project.Description.Substring(0, 100)...</span>
                                    }
                                    else
                                    {
                                        <span>@project.Description</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@project.Status</span>
                                </td>
                                <td>@project.StartDate.ToString("MM/dd/yyyy")</td>
                                <td>@project.EndDate.ToString("MM/dd/yyyy")</td>
                                <td>
                                    @if (project.PM != null)
                                    {
                                        <span>@project.PM.FirstName @project.PM.LastName</span>
                                        <br />
                                        <small class="text-muted">@project.PM.Email</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not assigned</span>
                                    }
                                </td>
                                <td>@project.WorkerCount</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-page="/Projects/Details" asp-route-id="@project.Id" class="btn btn-outline-primary btn-sm">Details</a>
                                        <a asp-page="/Projects/Edit" asp-route-id="@project.Id" class="btn btn-outline-secondary btn-sm">Edit</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (Model.TotalPages > 1)
    {
        <div class="row mt-3">
            <div class="col-md-12">
                <nav aria-label="Search results pagination">
                    <ul class="pagination justify-content-center">
                        @if (Model.HasPreviousPage)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Model.GetPageUrl(1)">First</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="@Model.GetPageUrl(Model.PageNumber - 1)">Previous</a>
                            </li>
                        }
                        
                        @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" href="@Model.GetPageUrl(i)">@i</a>
                            </li>
                        }
                        
                        @if (Model.HasNextPage)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Model.GetPageUrl(Model.PageNumber + 1)">Next</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="@Model.GetPageUrl(Model.TotalPages)">Last</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    }
}
else
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-info" role="alert">
                <h4 class="alert-heading">No projects found</h4>
                @if (!string.IsNullOrWhiteSpace(Model.SearchString) || (!string.IsNullOrWhiteSpace(Model.Status) && Model.Status != "All"))
                {
                    <p>No projects match your search criteria. Try adjusting your search terms or filters.</p>
                    <hr>
                    <a asp-page="/Search" class="btn btn-outline-primary">Clear Search</a>
                }
                else
                {
                    <p>There are no projects in the system yet.</p>
                    <hr>
                    <a asp-page="/Projects/Create" class="btn btn-primary">Create First Project</a>
                }
            </div>
        </div>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}