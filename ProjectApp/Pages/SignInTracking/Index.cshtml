@page
@model ProjectApp.Pages.SignInTracking.IndexModel

@{
    ViewData["Title"] = "Sign-In Tracking";
}

<h1>Sign-In Tracking</h1>

<div class="row">
    <div class="col-md-6">
        <h3>Sign-In Counts by Email</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Email Address</th>
                    <th>Total Sign-Ins</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.SignInCounts)
                {
                    <tr>
                        <td>@item.Key</td>
                        <td>@item.Value</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-6">
        <h3>Recent Sign-Ins</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Sign-In Time</th>
                    <th>IP Address</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model.RecentSignIns)
                {
                    <tr>
                        <td>@log.Email</td>
                        <td>@log.SignInTime.ToString("MM/dd/yyyy hh:mm:ss tt")</td>
                        <td>@(log.IpAddress ?? "N/A")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="mt-4">
    <h3>Statistics</h3>
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Sign-Ins</h5>
                    <p class="card-text display-4">@Model.TotalSignIns</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Unique Users</h5>
                    <p class="card-text display-4">@Model.UniqueUsers</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Today's Sign-Ins</h5>
                    <p class="card-text display-4">@Model.TodaySignIns</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">This Week's Sign-Ins</h5>
                    <p class="card-text display-4">@Model.WeekSignIns</p>
                </div>
            </div>
        </div>
    </div>
</div>