@page
@model ProjectApp.Pages.Activities.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Task</h1>

<h4>Activity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Activity.Title" class="control-label"></label>
                <input asp-for="Activity.Title" class="form-control" />
                <span asp-validation-for="Activity.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Activity.ProjectId" class="control-label">Project</label>
                <select asp-for="Activity.ProjectId" class ="form-control" asp-items="ViewBag.ProjectId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Activity.WorkerId" class="control-label">Assigned To</label>
                <select asp-for="Activity.WorkerId" class ="form-control" asp-items="ViewBag.WorkerId">
                    <option value="">-- Unassigned --</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
